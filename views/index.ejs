<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Privacy Watch</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>CRYPTO PRIVACY WATCH</h1>
            <nav>
                <a href="/">HOME</a>
                <a href="/monero-tps">MONERO TPS</a>
                <a href="#">COINS</a>
                <a href="#">COMPARE</a>
                <a href="#">RESOURCES</a>
                <a href="#">ABOUT</a>
            </nav>
        </header>


        <section class="hero">
            <h2>Tracking the Untraceable: Privacy Coins Unveiled</h2>
        </section>

        <!-- Add this section for the historical TPS calculation -->
        <section class="historical-tps">
            <h3>Historical TPS Calculation</h3>
            <button id="runHistoricalTPS">Run Historical TPS Calculation</button>
            <p id="calculationStatus"></p>
        </section>


        <table id="coin-table">
            <thead>
                <tr>
                    <th data-sort="name">Name</th>
                    <th data-sort="tps">TPS</th>
                    <th data-sort="security">Security</th>
                    <th data-sort="privacy">Privacy</th>
                    <th data-sort="consensus">Consensus Model</th>
                </tr>
            </thead>
            <tbody>
                <!-- Table rows will be dynamically inserted here -->
            </tbody>
        </table>
    </div>


    <script src="/script.js"></script>
    <script>
        document.getElementById('runHistoricalTPS').addEventListener('click', async () => {
            const statusElement = document.getElementById('calculationStatus');
            statusElement.textContent = 'Calculation started...';
            try {
                const response = await fetch('/run-historical-tps', { method: 'POST' });
                const data = await response.json();
                statusElement.textContent = data.message;
            } catch (error) {
                statusElement.textContent = 'Error: ' + error.message;
            }
        });
    </script>
</body>
</html>